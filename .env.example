# Dispatch - Notification Microservice
# Copy to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Admin API Key - for accessing /api/logs, /api/status, /api/test
# Generate a secure key: node -e "console.log('dk_admin_' + require('crypto').randomBytes(24).toString('hex'))"
ADMIN_API_KEY=dk_admin_your-secure-admin-key-here

# Database
DB_PATH=./data/dispatch.db

# CORS Configuration (comma-separated, supports wildcards)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://your-domain.com

# App Configuration (env-based)
# DISPATCH_APPS=myapp
# DISPATCH_MYAPP_API_KEY=dk_myapp_your-secure-key-here
# DISPATCH_MYAPP_NAME=My Application
#
# Discord channel
# DISPATCH_MYAPP_DISCORD_WEBHOOK=https://discord.com/api/webhooks/...
# DISPATCH_MYAPP_DISCORD_COLOR=5814783
# DISPATCH_MYAPP_DISCORD_FOOTER=Via My App
#
# Slack channel
# DISPATCH_MYAPP_SLACK_WEBHOOK=https://hooks.slack.com/services/T00/B00/xxxx
# DISPATCH_MYAPP_SLACK_COLOR=#36a64f
# DISPATCH_MYAPP_SLACK_FOOTER=Via My App

# Global Rate Limiting (fallback for apps without custom limits)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
